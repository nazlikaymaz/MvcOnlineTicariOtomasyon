@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.GrupSinif>
@{
    ViewBag.Title = "KolayTablolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Hızlı Bakış Tabloları</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">

                        @Html.Action("Partial1", "İstatistik")
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Müşteri Şehir Tablosu</h3>
                                <div class="card-tools">

                                </div>
                            </div>
                            <div class="card-body p-0">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Şehir</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Adet</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int siraNo = 0;}
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@{siraNo++;} @siraNo</td>
                                                <td>@x.Sehir</td>
                                                <td>
                                                    @if (x.Sayi == 1)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar progress-bar-striped" style="width: 55%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi > 1 && x.Sayi <= 2)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-gradient-warning" style="width: 70%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi >= 3)
                                                    {
                                                        <div class="progress progress-xs progress-striped active">
                                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                                        </div>
                                                    }
                                                </td>
                                                <td><span class="badge bg-danger">@x.Sayi</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Action("Partial4", "İstatistik")
                    </div>
                </div>
            </div>
            @Html.Action("Partial2", "İstatistik")
            @Html.Action("Partial3", "İstatistik")
        </section>
    </div>
    <aside class="control-sidebar control-sidebar-dark"></aside>
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="../../dist/js/demo.js"></script>
</body>
</html>

