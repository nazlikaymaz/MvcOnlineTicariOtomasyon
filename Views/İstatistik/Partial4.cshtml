@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.GrupSinif3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (x.Sayi >= 1 && x.Sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 4 && x.Sayi <= 8)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-striped" style="width: 55%"></div>
                                </div>
                            }

                            @if (x.Sayi >= 9)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-danger">@x.Sayi</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


